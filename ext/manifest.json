{
  "name": "Chrome Stream Chat",
  "version": "1.0.1",
  "manifest_version": 3,
  "description": "A simple extension to combine chat from youtube, twitch, and livecoding.",
  "homepage_url": "http://www.milestonemade.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": [
    "https://www.youtube.com/*",
    "https://www.livecoding.tv/*",
    "http://localhost:54545/*"
  ],
  "background": {
        "scripts": [
	        "js/jquery/jquery.min.js",
            "src/inject/background.js"
        ],
        "persistent": true
    },
  "content_scripts": [
    {
      "matches": [
	    "https://www.youtube.com/*",
	    "https://www.livecoding.tv/*"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/inject/inject.js"
      ]
    }
  ],
  "sockets": {
	  "tcpserver": {
		  "listen": ["http://127.1.1.0:54545"]
	  }

  }
}
